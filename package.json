{
  "name": "node-typescript-webpack-boilerplate",
  "version": "1.0.0",
  "description": "A node + typescript + webpack + nodemon boilerplate",
  "main": "src/index",
  "scripts": {
    "prestart": "rimraf dev && webpack --config webpack.config.ts --mode development",
    "start": "node dev/index.js",
    "start:watch": "rimraf dev && webpack --config webpack.config.ts --mode development --env.watch --watch",
    "build": "rimraf dist && npm run lint && webpack --config webpack.config.ts --mode production",
    "lint": "eslint \"**/*.js\" \"**/*.ts\""
  },
  "keywords": [
    "node",
    "typescript",
    "webpack",
    "nodemon",
    "boilerplate"
  ],
  "author": "Rodrigo Cavanha",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@types/clean-webpack-plugin": "^0.1.3",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/node": "^13.11.1",
    "@types/webpack": "^4.41.11",
    "@types/webpack-node-externals": "^1.7.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin-next": "^1.1.7"
  }
}
