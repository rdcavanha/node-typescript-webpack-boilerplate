{
  "name": "node-typescript-webpack-boilerplate",
  "version": "1.0.0",
  "description": "A node + typescript + webpack + nodemon boilerplate",
  "main": "src/index",
  "scripts": {
    "prestart": "rimraf dev && webpack --config webpack.config.ts --mode development",
    "start": "node dev/index.js",
    "start:watch": "rimraf dev && webpack --config webpack.config.ts --mode development --env.watch --watch",
    "build": "rimraf dist && npm run lint && webpack --config webpack.config.ts --mode production",
    "lint": "eslint \"**/*.js\" \"**/*.ts\""
  },
  "keywords": [
    "node",
    "typescript",
    "webpack",
    "nodemon",
    "boilerplate"
  ],
  "author": "Rodrigo Cavanha",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@types/clean-webpack-plugin": "^0.1.3",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/node": "^14.6.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.1",
    "webpack-shell-plugin-next": "^1.2.0"
  }
}
